  if (!confirm('Delete ' + ids.length + ' AI number(s)? This will release the numbers and cannot be undone.')) return;
  try {
    for (const id of ids) {
      var res = await fetch('/api/admin/ai/numbers/' + encodeURIComponent(id), { method: 'DELETE' });
      var data = await res.json().catch(function(){ return null; });
      if (!res.ok || !data || data.success === false) {
        var msg = (data && data.message) || ('Failed to delete AI number ' + id);
        throw new Error(msg);
      }
    }
    showAdminToast('Delete requested for ' + ids.length + ' AI number(s).', 'success');
    viewUser(userId);
  } catch (e) {
    showAdminToast('Error deleting AI numbers: ' + e.message, 'error');
  }
}

